<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Body mass index (BMI) is a measure of body fat based on height and weight that applies to adult men and women."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp" android:layout_marginStart="15dp"/>
    <TextView
            android:text="BMI Calculator"
            android:padding="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2" android:layout_marginTop="16dp"
            android:layout_marginStart="1dp"/>
    <Button
            android:text="Male"
            android:padding="45px"
            android:onClick="MaleButton_Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/heightEditText"/>
    <Button
            android:text="Female"
            android:padding="45px"
            android:onClick="FemaleButton_Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="@+id/heightEditText"
            android:layout_marginStart="37dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/heightEditText"/>
    <TextView
            android:text="Height cm"
            android:padding="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/weightEditText"/>
    <TextView
            android:text="Weight kg"
            android:padding="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="229dp" android:layout_marginStart="15dp"/>
    <EditText
            android:padding="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/heightEditText"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            android:layout_marginStart="9dp" app:layout_constraintStart_toEndOf="@+id/textView3"/>
    <EditText
            android:padding="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/weightEditText"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            android:layout_marginStart="13dp" app:layout_constraintStart_toEndOf="@+id/textView4"/>
    <Button
            android:text="Calculate"
            android:padding="45px"
            android:onClick="CalculateButton_Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/weightEditText" android:layout_marginTop="44dp"
            android:layout_marginStart="35dp"
            app:layout_constraintTop_toBottomOf="@+id/weightEditText"/>
    <TextView
            android:text="Your BMI is:"
            android:padding="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/button3" android:layout_marginTop="11dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <TextView
            android:text="0.00"
            android:padding="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmiTextView"
            app:layout_constraintStart_toStartOf="@+id/bmiCommentTextView"
            android:layout_marginStart="6dp" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Comment"
            android:padding="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmiCommentTextView" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/bmiTextView" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"/>
</androidx.constraintlayout.widget.ConstraintLayout>